---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import Services from "@/components/sections/Services.astro";
import Process from "@/components/sections/Process.astro";
import Cases from "@/components/sections/Cases.astro";
import Plans from "@/components/sections/Plans.astro";
import Stack from "@/components/sections/Stack.astro";
import SeoPromise from "@/components/sections/SeoPromise.astro";
import FAQ from "@/components/sections/FAQ.astro";
import Contact from "@/components/sections/Contact.astro";
import { faq } from "@/content/faq";
import { buildOrganizationSchema, buildProfessionalServiceSchema, buildFaqSchema } from "@/lib/seo/schema";

const jsonLd = [buildOrganizationSchema(), buildProfessionalServiceSchema(), buildFaqSchema(faq)];
---
<BaseLayout
  title="ASSSIE | Automatización, IA y Marketing Digital para Empresas"
  description="Agencia de automatización, datos e IA para PYMES en crecimiento. Marketing digital medible, desarrollo a medida y optimización de procesos en Latam."
  jsonLd={jsonLd}
>
  <Hero />
  <Services />
  <Process />
  <Cases />
  <Plans />
  <Stack />
  <SeoPromise />
  <FAQ />
  <Contact />
</BaseLayout>

