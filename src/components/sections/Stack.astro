---
import SectionHeading from "@/components/molecules/SectionHeading.astro";
import TechPill from "@/components/molecules/TechPill.astro";
import { stack } from "@/content/stack";
---
<section id="stack" class="bg-surface py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="reveal">
      <SectionHeading
        eyebrow="Stack tecnológico"
        title="Tecnología moderna, estable y escalable"
        subtitle="Usamos herramientas robustas y probadas para construir soluciones rápidas, mantenibles y seguras."
      />
    </div>
    <div class="mt-12 flex flex-wrap gap-4 leading-relaxed reveal-stagger">
      {stack.map((item, index) => (
        <div style={`--stagger: ${index};`}>
          <TechPill label={item} />
        </div>
      ))}
    </div>
  </div>
</section>

