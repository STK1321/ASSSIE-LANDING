---
import SectionHeading from "@/components/molecules/SectionHeading.astro";
import CaseCard from "@/components/molecules/CaseCard.astro";
import { cases } from "@/content/cases";
---
<section id="casos" class="bg-surface py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="reveal">
      <SectionHeading
        eyebrow="Casos tipo"
        title="Escenarios reales, beneficios cualitativos"
        subtitle="Ejemplos de cómo resolvemos problemas comunes en operaciones, marketing y tecnología."
      />
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-3 reveal-stagger">
      {cases.map((item, index) => (
        <div style={`--stagger: ${index};`}>
          <CaseCard item={item} />
        </div>
      ))}
    </div>
  </div>
</section>
