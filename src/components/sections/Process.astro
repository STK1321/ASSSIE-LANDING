---
import SectionHeading from "@/components/molecules/SectionHeading.astro";
import ProcessStep from "@/components/molecules/ProcessStep.astro";
import { processSteps } from "@/content/process";
---
<section id="proceso" class="py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="reveal">
      <SectionHeading
        eyebrow="Como trabajamos"
        title="Un proceso claro, medible y colaborativo"
        subtitle="Avanzamos en cinco pasos para reducir riesgo, acelerar aprendizaje y construir soluciones escalables."
      />
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-5 reveal-stagger">
      {processSteps.map((step, index) => (
        <div style={`--stagger: ${index};`}>
          <ProcessStep step={step} index={index} />
        </div>
      ))}
    </div>
  </div>
</section>
