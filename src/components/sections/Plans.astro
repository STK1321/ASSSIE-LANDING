---
import SectionHeading from "@/components/molecules/SectionHeading.astro";
import PlanCard from "@/components/molecules/PlanCard.astro";
import { plans } from "@/content/plans";
---
<section id="planes" class="py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="reveal">
      <SectionHeading
        eyebrow="Planes"
        title="Modelos claros para cada etapa"
        subtitle="Elige un plan base o armemos un alcance personalizado según tu operación."
      />
    </div>
    <div class="mt-10 grid gap-6 lg:grid-cols-3 reveal-stagger">
      {plans.map((plan, index) => (
        <div style={`--stagger: ${index};`}>
          <PlanCard plan={plan} />
        </div>
      ))}
    </div>
  </div>
</section>

