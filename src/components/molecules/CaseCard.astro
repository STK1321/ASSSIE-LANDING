---
import Icon from "@/components/atoms/Icon.astro";
import type { CaseStudy } from "@/content/cases";

const { item } = Astro.props as { item: CaseStudy };
---
<article class="flex h-full min-h-[320px] flex-col rounded-3xl border border-slate/10 bg-white p-6 shadow-card">
  <p class="text-xs font-semibold uppercase tracking-[0.2em] text-accent">{item.title}</p>
  <h3 class="mt-3 text-xl font-semibold text-ink">{item.industry}</h3>
  <p class="mt-2 text-sm text-slate">{item.outcome}</p>
  <ul class="mt-4 space-y-2 text-sm text-slate">
    {item.highlights.map((highlight: string) => (
      <li class="flex gap-2">
        <Icon name="check" class="h-4 w-4 text-accent" />
        <span>{highlight}</span>
      </li>
    ))}
  </ul>
  <div class="mt-4">
    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate">Entregables</p>
    <ul class="mt-2 space-y-2 text-sm text-slate">
      {item.deliverables.map((deliverable: string) => (
        <li class="flex gap-2">
          <Icon name="check" class="h-4 w-4 text-accent" />
          <span>{deliverable}</span>
        </li>
      ))}
    </ul>
  </div>
  <p class="mt-4 text-xs font-semibold uppercase tracking-[0.2em] text-slate">
    Tiempo t√≠pico: <span class="font-normal normal-case text-slate">{item.typicalTimeline}</span>
  </p>
</article>
