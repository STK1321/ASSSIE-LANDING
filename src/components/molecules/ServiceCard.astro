---
import Icon from "@/components/atoms/Icon.astro";
import type { Service } from "@/content/services";

const { service } = Astro.props as { service: Service };
---
<article class="group flex h-full flex-col rounded-3xl border border-slate/10 bg-white p-6 shadow-card transition hover:-translate-y-1">
  <div class="flex items-center gap-3">
    <span class="inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-accent/10 text-accent">
      <Icon name={service.icon} class="h-6 w-6" />
    </span>
    <div>
      <h3 class="text-lg font-semibold text-ink">{service.title}</h3>
      <p class="text-sm text-slate">{service.subtitle}</p>
    </div>
  </div>
  <ul class="mt-4 space-y-2 text-sm text-slate">
    {service.bullets.map((bullet: string) => (
      <li class="flex gap-2">
        <Icon name="check" class="h-4 w-4 text-accent" />
        <span>{bullet}</span>
      </li>
    ))}
  </ul>
</article>
